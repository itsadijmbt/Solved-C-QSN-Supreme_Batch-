#include <iostream>

using namespace std;

QSN : missing elememt using bs

int main()
{4
    int n;
    cin>>n;
    
    int a[n];
    
    for(int i=0;i<n;++i)cin>>a[i];
    
    int s=0, e=n-1,m=0;
    
    m=(s)+(e-s)/2;
    int ans=0;
    
    while(s<=e)
    {
        m=(s)+(e-s)/2;
    
        if(a[m]==m+1)
        {
            s=m+1;
        }
        else{
            ans=m+1;
            e=m-1;
        }
    
    }
    cout<<ans<<" ";
    return 0;
}

