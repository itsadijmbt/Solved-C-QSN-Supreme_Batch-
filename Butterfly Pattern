QSN:
*       **
**     ***
***   ****
**** *****
**********
**********
****  ****
***    ***
**      **
*        *

Solution:
// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
 
  for(int i=1;i<=10;++i)
  { 
      if(i<5) 
      {
          for(int j=1;j<=10;++j)
          {
              if(j<=i || j>=10-i) cout<<"*";
              else cout<<" ";
          }
      }
 
      else if(i>=5)
      {
          for(int j=1;j<=10;++j)
          {
              if(j<=(10-i)+1 || j>=i)cout<<"*";
              else cout<<" ";
          }
      }
      cout<<"\n";
  }
    return 0;
}
